import("//base/security/security_guard/security_guard.gni")
import("//build/test.gni")

ohos_unittest("SecurityGuardNapiTest") {
  install_enable = true
  subsystem_name = "securitycloudgovernance"
  part_name = "security_guard"
  module_out_path = part_name + "/" + part_name

  include_dirs = [
    "${sg_root_dir}/frameworks/common/constants/include",
    "${sg_root_dir}/frameworks/js/napi",
    "${sg_root_dir}/frameworks/common/log/include",
  ]

  sources = [
    "${sg_root_dir}/frameworks/js/napi/napi_request_data_manager.cpp",
    "${sg_root_dir}/frameworks/js/napi/napi_security_event_querier.cpp",
    "${sg_root_dir}/frameworks/js/napi/security_guard_napi.cpp",
    "${sg_root_dir}/frameworks/js/napi/security_guard_sdk_adaptor.cpp",
    "${sg_root_dir}/frameworks/js/napi/test/unittest/src/securityguard_napi_test.cpp",
  ]
  defines = []
  if (security_guard_trim_model_analysis) {
    defines += [ "SECURITY_GUARD_TRIM_MODEL_ANALYSIS" ]
  }

  deps = [
    "${sg_root_dir}/frameworks/common/classify:libsg_classify_sdk",
    "${sg_root_dir}/frameworks/common/collect:libsg_collect_sdk",
  ]

  external_deps = [
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_core",
    "napi:ace_napi",
    "samgr:samgr_proxy",
    "googletest:gmock",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":SecurityGuardNapiTest" ]
}
